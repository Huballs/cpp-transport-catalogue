Checks: 'bugprone*,clang-analyzer*,cert*,cppcore*,misc*,modernize*,performance*,portability*,readability*,
        google*,-google-runtime-references, -modernize-use-trailing-return-type, -readability-identifier-length,
        -misc-no-recursion, -modernize-raw-string-literal
        hicpp*,-hicpp-signed-bitwise,
        -*-braces-around-statements'
FormatStyle:     file
CheckOptions:
      - key:    readability-implicit-bool-conversion.AllowIntegerConditions
        value:  '1'